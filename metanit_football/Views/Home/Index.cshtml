@model IEnumerable<metanit_football.Models.Player>

@{
    ViewBag.Title = "Игроки";
}

<div>
    <h1>Каталог Игроков</h1>

    <p>@Html.ActionLink("Создать Игрока", "Create") | @Html.ActionLink("Создать команду", "Create", "Teams")</p>

    

    <br />

    <table class="table-striped">
        <tr>
            <th>Имя Игрока</th>
            <th>Возраст</th>
            <th>Позиция на поле </th>
            <th>Команда</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Age)</td>
                <td>@Html.DisplayFor(modelItem => item.Position)</td>
                <td>@Html.DisplayFor(modelItem => item.Team.Name)</td>
                <td>@Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Удалить", "Delete", "Players", new { id = item.Id }, null)</td>
            </tr>
        }


    </table>

</div>
